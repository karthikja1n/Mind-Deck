{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "node_modules",
        "test",
        "backend",
        ".examples",
        ".idea",
        ".old",
        "dev",
        "dist",
        "react-by-sample",
        "src",
        "stories",
        ".storybook",
        ".gitignore",
        ".yarnrc",
        "gulpfile.ts",
        "nodemon.json",
        "package.json",
        "tsconfig.test.json",
        "webpack.stats.json",
        "yarn.lock",
        "yarn-error.log",
        "build/ts-import-plugin"
    ],
    "verbose": true,
    "execMap": {
        "js": "node --harmony"
    },
    "events": {
        "restart": "echo \"App restarted\""
    },
    "watch": [
        "tsconfig.json",
        "src/tsconfig.json",
        "build/*.ts"
    ],
    "ext": "js json ts"
}
